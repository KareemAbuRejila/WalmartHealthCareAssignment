<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WalmartHealthCareAssignment" parent="Theme.Material3.DayNight.NoActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>

        <!-- Background and surface colors -->
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Text colors -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Customize the corner radius and elevation for Material Design 3. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.LargeComponent</item>

        <!-- Elevation overlays for better Material 3 looks. -->
        <item name="elevationOverlayEnabled">true</item>

        <item name="windowActionModeOverlay">true</item>
        <!--        <item name="actionModeCloseDrawable">@drawable/ic_close_24dp</item>-->
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">

    </style>
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/colorSecondaryContainer</item>
        <item name="itemRippleColor">@color/colorSecondary</item>
        <item name="itemTextAppearanceInactive">@color/colorError</item>
        <item name="itemTextAppearanceActive">@color/colorOnError</item>
        <item name="itemTextColor">@color/accentColor</item>
    </style>
</resources>